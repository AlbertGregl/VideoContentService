@model IEnumerable<VideoContentService.Admin.Models.UserResponse>

@{
    ViewBag.Title = "User Management";
}

<h2>User Management</h2>

<form asp-controller="UserAdmin" asp-action="Index" method="get">
    <div>
        <label for="firstNameFilter">First Name:</label>
        <input type="text" id="firstNameFilter" name="firstNameFilter" value="@Request.Query["firstNameFilter"]" />

        <label for="lastNameFilter">Last Name:</label>
        <input type="text" id="lastNameFilter" name="lastNameFilter" value="@Request.Query["lastNameFilter"]" />

        <label for="usernameFilter">Username:</label>
        <input type="text" id="usernameFilter" name="usernameFilter" value="@Request.Query["usernameFilter"]" />

        <label for="countryFilter">Country:</label>
        <input type="text" id="countryFilter" name="countryFilter" value="@Request.Query["countryFilter"]" />

        <button type="submit">Filter</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Country ID</th>
            <th>Phone</th>
            <th>Confirmed</th>
            <th>Deleted At</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.CountryOfResidenceId</td>
                <td>@user.Phone</td>
                <td>@user.IsConfirmed</td>
                <td>@user.DeletedAt</td>
                <td><a asp-action="Edit" asp-route-id="@user.Id">Edit</a></td>
                <td><a asp-action="Delete" asp-route-id="@user.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

