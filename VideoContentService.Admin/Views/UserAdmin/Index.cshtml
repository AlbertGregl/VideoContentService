@model IEnumerable<IntegrationModule.BLModels.UserResponse>

@{
    ViewBag.Title = "User Management";
}

<h2>User Management</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Create User</a>

<form asp-controller="UserAdmin" asp-action="Index" method="get" class="mb-3">
    <div class="form-inline">
        <label for="firstNameFilter" class="mr-2">First Name:</label>
        <input type="text" id="firstNameFilter" name="firstNameFilter" value="@Context.Request.Query["firstNameFilter"]" class="form-control mr-2" />

        <label for="lastNameFilter" class="mr-2">Last Name:</label>
        <input type="text" id="lastNameFilter" name="lastNameFilter" value="@Context.Request.Query["lastNameFilter"]" class="form-control mr-2" />

        <label for="usernameFilter" class="mr-2">Username:</label>
        <input type="text" id="usernameFilter" name="usernameFilter" value="@Context.Request.Query["usernameFilter"]" class="form-control mr-2" />

        <label for="countryFilter" class="mr-2">Country:</label>
        <input type="text" id="countryFilter" name="countryFilter" value="@Context.Request.Query["countryFilter"]" class="form-control mr-2" />

        <button type="submit" class="btn btn-secondary">Filter</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Country ID</th>
            <th>Phone</th>
            <th>Confirmed</th>
            <th>Deleted At</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.CountryOfResidenceId</td>
                <td>@user.Phone</td>
                <td>@user.IsConfirmed</td>
                <td>@user.DeletedAt</td>
                <td><a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a></td>
                <td><a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
