@model IEnumerable<IntegrationModule.BLModels.CountryResponse>

@{
    ViewData["Title"] = "Country Management";
}

<h1>Country Management</h1>

<table class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var country in Model)
        {
            <tr>
                <td>@country.Code</td>
                <td>@country.Name</td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" asp-action="Index" asp-route-page="@ViewContext.HttpContext.Request.Query["page"] - 1" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        <li class="page-item">
            <a class="page-link" asp-action="Index" asp-route-page="@ViewContext.HttpContext.Request.Query["page"] + 1" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>
