@model IEnumerable<IntegrationModule.BLModels.VideoResponse>

@{
    ViewData["Title"] = "Video Management";
}

<h1>Video Management</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Video</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Genre</th>
            <th>Total Seconds</th>
            <th>Streaming URL</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var video in Model)
            {
                <tr>
                    <td>@video.Id</td>
                    <td>@video.Name</td>
                    <td>@video.Description</td>
                    <td>@video.GenreId</td> <!-- You might want to display genre name instead -->
                    <td>@video.TotalSeconds</td>
                    <td>@video.StreamingUrl</td>
                    <td>@video.ImageId</td> <!-- You might want to display the image itself -->
                    <td>
                        <a asp-action="Edit" asp-route-id="@video.Id" class="btn btn-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@video.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <p>No videos found.</p>
        }
    </tbody>
</table>
